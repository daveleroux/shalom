<%= form_for(model) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>

    <% fields.each do |field| %>
        <div class="field">


          <%= f.label field[:label] %>
          <br/>

          <% type_hash = field[:type_hash] %>
          <% case type_hash[:type] %>
          <% when :text %>
          <%= f.text_field field[:value] %>
          <% when :combo %>
              <%= f.select  field[:value], type_hash[:options] %>
          <% end %>

        </div>
    <% end %>

    <div class="actions">
      <%= f.submit button_text%>
    </div>
<% end %>

<%= set_form_focus %>