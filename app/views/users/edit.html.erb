<h1>Edit <%= same_user?(@user) ? "my" : (@user.username + "'s") %> profile</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :username, "Username:" %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :password, "Password:" %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation:" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
    <div class="field">
      <%= f.label :admin, "Administrator:" %>
      <%= f.check_box :admin, :disabled => !admin? %>
    </div>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= set_form_focus %>