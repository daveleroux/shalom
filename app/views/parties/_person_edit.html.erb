<h1>Edit Person</h1>
<%= render 'shared/basic_edit', {
        :model => @party.partyize,
        :button_text => "Update",
        :fields => [
                {:label => "Name:", :value => :name, :type_hash => {:type => :text}},
                {:label => "Surname:", :value => :surname, :type_hash => {:type => :text}},
                {:label => "Email:", :value => :email, :type_hash => {:type => :text}},
                {:label => "Cell:", :value => :cell, :type_hash => {:type => :text}},
                {:label => "Gender:", :value => :gender, :type_hash => {:type => :combo, :options => Gender.values}},
        ]
} %>
